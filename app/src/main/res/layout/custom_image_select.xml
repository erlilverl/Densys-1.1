<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/takePhotoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layerType="hardware"
        android:src="@drawable/ic_add_a_photo_black_24px"
        />
    <Button
        android:id="@+id/takeNewPhotoButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/takePhotoImageView"
        android:padding="8dp"
        android:text="@string/take_photo_now" />
    <Button
        android:id="@+id/chooseFromGalleryButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@id/takeNewPhotoButton"
        android:text="@string/choose_from_gallery" />

</RelativeLayout>